}

/* Navbar Styles */
.navbar {
    background-color: #ffffff;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    padding: 10px 20px;
    position: fixed;
    width: calc(100% - 250px); /* Adjust according to sidebar width */
    top: 0;
    z-index: 1030; /* Ensure navbar stays above content */
    left: 250px; /* Matches the sidebar width */
    transition: all 0.3s ease;
}

.navbar-toggler {
    border: none;
}

.navbar-collapse {
