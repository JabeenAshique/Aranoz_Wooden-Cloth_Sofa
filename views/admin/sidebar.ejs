}

/* Responsiveness */
@media (max-width: 992px) {
    .sidebar-nav {
        transform: translateX(-100%);
    }

    .sidebar-nav.show {
        transform: translateX(0);
    }

    .navbar {
        width: 100%;
        left: 0;
    }

    .main-content {
        margin-left: 0;
    }
}

@media (max-width: 768px) {
    .navbar-brand {
        font-size: 1rem;
    }

    .navbar-nav .nav-item .nav-link {
        font-size: 1rem;
    }
}



