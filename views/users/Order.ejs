   <style>
    .order-item {
      display: flex;
      align-items: center;
      justify-content: space-between;
      background-color: #f6e2e2;
      padding: 10px;
      border: 1px solid #ddd;
      margin-bottom: 10px;
      opacity: 0.9; /* Adding opacity */
      transition: opacity 0.3s ease; /* Smooth transition on hover */
    }

.order-item:hover {
       opacity: 1; /* Remove opacity on hover */
    
      }
    

    .order-item img {
      width: 60px;
      height: auto;
      margin-right: 10px;
    }

    .order-details {
      flex: 1;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
    }

    .order-details h5 {
      font-size: 16px;
      margin: 0;
    }

    .order-details p {
      margin: 5px 0;
    }

    .order-info {
      text-align: right;
      font-size: 14px;
    }

    .order-info p {
      margin: 0;
    }

    .order-action {
      text-align: right;
    }

    .order-action a {
      font-size: 14px;
      color: #007bff;
    }

    .order-status {
      font-size: 14px;
      font-weight: bold;
      color: green;
    }

    .order-status.cancelled {
      color: red;
    }

    .order-date {
      font-size: 14px;
      color: #888;
    }

    .search-bar {
      display: flex;
      justify-content: space-between;
      margin-bottom: 20px;
    }

    .search-bar input {
      width: 80%;
      padding: 10px;
      font-size: 16px;
      border: 1px solid #ddd;
      border-radius: 5px;
    }

    .search-bar button {
      width: 18%;
      padding: 10px;
      font-size: 16px;
      border: none;
      background-color: #007bff;
      color: #fff;
      border-radius: 5px;
    }
    .order-status-box {
  padding: 20px;
  margin-bottom: 15px;
  border-radius: 10px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.order-status-content {
  width: 100%;
  text-align: left;
}

.order-date {
  color: #777;
  font-size: 0.9em;
}

.order-status {
  color: #28a745; /* Green color for status */
  font-weight: bold;
  font-size: 1.1em;
}

.order-status-detail {
  color: #333;
  font-size: 1em;
  margin-top: 5px;
}

 </style>
</head>

<body>
  <%- include('header') %>
  <section class="order-section padding_top">
    <div class="container">
      <!-- Search Bar -->
      <div class="search-bar">
        <input type="text" placeholder="Search your orders here" id="search-input">
        <button class=" btn btn_3" id="search-btn" type="button">Search Orders</button>
      </div>
  
      <!-- Order List -->
      <% if (orders && orders.length > 0) { %>
        <% orders.forEach(order => { %>
          <% order.orderedItems.forEach(item => { %>
            <div class="order-item row mb-4" style="background-color: #f1e8e8; padding: 10px; border-radius: 8px;">
              <!-- Product Image -->
              <div class="col-md-3 order-image">
                <% if (item.product) { %>
                  <% if (item.product.productImage && item.product.productImage.length > 0) { %>
                    <img src="<%= item.product.productImage[0] %>" alt="<%= item.product.productName %>" class="img-fluid" style="width: 100px; height: auto;">
                    <% } else { %>
                    <img src="" alt="Default Image" class="img-fluid"> <!-- Default image -->
                  <% } %>
                <% } else { %>
                  <img src="" alt="Product not available" class="img-fluid">
                <% } %>
              </div>
  
              <!-- Product Details -->
              <div class="col-md-6 product-details">
                <% if (item.product) { %>
                  <h5><%= item.product.productName %></h5>
                  <p>Price: â‚¹<%= item.price %></p>
                  <p>Quantity: <%= item.quantity %></p>
                <% } else { %>
                  <h5>Product not available</h5>
                  <p>Quantity: <%= item.quantity %></p>
                <% } %>
              </div>
  
              <!-- Order Status and Date -->
              <div class="col-md-3 order-status-box">
                <div class="order-info">
                  <p class="order-date">
                    <p class="order-status <%= order.status === 'Cancelled' ? 'cancelled' : '' %>" style="text-align: left;">
                      <%= order.status %>
                    </p>
                    <p style="text-align: left;">Your item has been <%= order.status ? order.status.toLowerCase() : 'processed' %></p>
                    
                  <p style="text-align: left;"> <a href="/order/<%= order._id %>">View</a></p>
                </div>
              </div>
            </div>
          <% }) %>
        <% }) %>
      <% } else { %>
        <p>No ordered items found.</p>
      <% } %>
    </div>
  </section>
  
  <%- include('footer') %>

  <!--::footer_part end::-->

