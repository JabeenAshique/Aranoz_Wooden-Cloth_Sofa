    }

    .address-container label {
      display: block;
      cursor: pointer;
      font-size: 1.2em;
    }

    .address-type {
      font-weight: bold;
      font-size: 1.4em;
      color: #333;
    }

    .address-details,
    .phone,
    .alt-phone {
      margin: 5px 0;
      font-size: 1.2em;
      color: #555;
    }

    .address-container input[type="radio"] {
      margin-right: 10px;
      transform: scale(1.5);
    }
  
    .product-item {
      padding: 10px 0;
      border-bottom: 1px solid #ddd;
      margin-bottom: 10px;
    }
    .product-item:last-child {
      border-bottom: none;
      margin-bottom: 0;
    }
    .list li {
      padding: 10px 0;
    }
    .last {
        float: right;
    }
    .middle{
        padding-left: 20px;
    }
    .oval-textbox-container {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .oval-textbox {
            width: 300px;
            padding: 5px 10px;
            border-radius: 25px;
            border: 2px solid #fafafa;
            outline: none;
        }

        .apply-button {
            padding: 5px 10px;
            border-radius: 20px;
            border: none;
            background-color: #f0f0f0;
            cursor: pointer;
            font-size: 16px;
        }

        .apply-button:hover {
            background-color:  #ff7f50;
        }
  </style>
